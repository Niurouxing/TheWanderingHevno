{
    "id": "panel_debug_moment",
    "name": "Debug Log Panel",
    "version": "1.0.0",
    "description": "A panel that displays runtime diagnostic information from moment._log_info, including LLM calls and system logs.",
    "author": "Hevno Team",
    "frontend": {
        "type": "cockpit-panel",
        "priority": 200,
        "entryPoint": "dist/main.js",
        "srcEntryPoint": "src/MomentInspectorPanel.jsx",
        "contributions": {
            "cockpit.panels": [
                {
                    "id": "panel_debug_moment.main",
                    "name": "调试日志",
                    "componentExportName": "MomentInspectorPanel",
                    "defaultState": { "x": 1050, "y": 20, "width": 450, "height": 700 },
                    "defaultEnabled": true
                }
            ],
            "core_runner_ui.menu_actions": [
                {
                    "id": "panel_debug_moment.actions.refresh",
                    "title": "刷新状态",
                    "icon": "Refresh",
                    "hookName": "panel_debug_moment.refresh"
                }
            ],
            "cockpit.chrome_actions": [
                {
                    "id": "panel_debug_moment.toggle_button",
                    "panelId": "panel_debug_moment.main",
                    "title": "切换调试日志",
                    "icon": "BugReport"
                }
            ]
        }
    }
}