{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "rootDir": "src",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
