// frontend/package.json (关键修复)
{
  "name": "@hevno/frontend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [ 
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:packages && yarn build:apps",
    
    "build:packages": "yarn workspace @hevno/kernel build && yarn workspace @hevno/frontend-sdk build",

    "build:apps": "yarn workspace @hevno/workbench build",

    "dev": "yarn workspace @hevno/workbench dev"
  },
  "dependencies": {},
  "devDependencies": {}
}